<UserControl x:Class="RejestrNieruchomosciNew.View.UserControl_Add_danePodstawowe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:loc="clr-namespace:RejestrNieruchomosciNew.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <UserControl.Resources>
        <loc:resultCnvr x:Key="conv"/>
        <loc:stringToDecimal x:Key="convStrToDec"/>
        <Style TargetType="Label" x:Key="label">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="VerticalContentAlignment" Value="Bottom"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="tekstBox">
            <Setter Property="Height" Value="30" ></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="ComboBox" x:Key="comboBox">
            <Setter Property="Height" Value="30" ></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="Button" x:Key="button">
            <Setter Property="Height" Value="30" ></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
    </UserControl.Resources>
 
    <Grid ShowGridLines="False" Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="13"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="13"/>
            <ColumnDefinition Width="510"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.Column="1"
               Style="{StaticResource label}"
               Content="Numer działki"
               Margin="0,0,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                Style="{StaticResource tekstBox}"
                Text="{Binding dzialkaViewModel.dzialka.Numer, UpdateSourceTrigger=LostFocus, Mode=TwoWay }"
                Margin="0,25,0,0"/>
        <Label Grid.Row="1" Grid.Column="1"
               Style="{StaticResource label}"
               Content="Gmina"
               Margin="0,55,0,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1"
                Style="{StaticResource comboBox}"
                Margin="0,80,0,0"
                SelectedValue="{Binding dzialkaViewModel.obreb.gminaValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                ItemsSource="{Binding dzialkaViewModel.obreb.gminaView}"/>
        <Label Grid.Row="1" Grid.Column="1"
               Style="{StaticResource label}"
               Content="Obręb"
               Margin="0,110,0,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1"
                Style="{StaticResource comboBox}"
                Margin="0,135,0,0"
                SelectedValue="{Binding dzialkaViewModel.obreb.obrebValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                ItemsSource="{Binding dzialkaViewModel.obreb.obrebView}"/>
        <Label Grid.Row="1" Grid.Column="1"
               Style="{StaticResource label}"
               Content="Numer KW zrob."
               Margin="0,165,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                Style="{StaticResource tekstBox}"
                Text="{Binding dzialkaViewModel.dzialka.Kwzrob, UpdateSourceTrigger=LostFocus, Mode=TwoWay }"
                Margin="0,190,0,0"/>
        <Label Grid.Row="1" Grid.Column="1"
               Style="{StaticResource label}"
               Content="Numer KW akt."
               Margin="0,220,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                Style="{StaticResource tekstBox}"
                Text="{Binding dzialkaViewModel.dzialka.Kwakt, UpdateSourceTrigger=LostFocus, Mode=TwoWay }"
                Margin="0,245,0,0"/>
        <Label Grid.Row="1" Grid.Column="1"
               Style="{StaticResource label}"
               Content="Powierzchnia"
               Margin="0,275,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                Style="{StaticResource tekstBox}"
                Text="{Binding dzialkaViewModel.dzialka.Pow, Converter={StaticResource convStrToDec}, UpdateSourceTrigger=LostFocus, Mode=TwoWay }"
                Margin="0,300,0,0"/>
    </Grid>
</UserControl>
