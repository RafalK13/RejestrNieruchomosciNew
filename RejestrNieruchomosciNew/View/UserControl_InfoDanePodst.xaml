<UserControl x:Class="RejestrNieruchomosciNew.View.UserControl_InfoDanePodst"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RejestrNieruchomosciNew.View"
             xmlns:con="clr-namespace:RejestrNieruchomosciNew.ViewModel"
             xmlns:view="clr-namespace:RejestrNieruchomosciNew.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1300"
             x:Name="InfoDanePodstawowe"
             >
    <UserControl.Resources>
        <con:personIdToPersonName x:Key="parsonConvert"/>
        <con:NabycieRodzDokIdToName x:Key="rodzDokConvert"/>
        <con:slownikIdToName x:Key="slowConvert"/>
        <con:uliceIdToUliceName x:Key="uliceCon"/>
        <Style TargetType="Label" x:Key="labelRaf">
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <Style TargetType="view:UserControl_ElementInfo" x:Key="userInfo">
            <Setter Property="widthLabelRaf" Value="110"/>
            <Setter Property="IsHitTestVisible" Value="false"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GridSplitter 
                   Grid.Column ="0"  
                   Width="5"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Stretch"
                   Panel.ZIndex="13" 
                   />
        <GridSplitter 
                   Grid.Column ="1"  
                   Width="5"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Stretch"
                   Panel.ZIndex="13" 
                   />

        <ScrollViewer Grid.Column="0" 
                      VerticalScrollBarVisibility="Auto"
                      >

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Label  Grid.Row="0"
                        Style="{StaticResource labelRaf}"
                        Content="Dane podstawowe działki"
                        />

                <view:UserControl_ElementInfo
                        Grid.Row="1"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="Numer działki"
                        tekstRaf="{Binding Path=DataContext.infoMain.infoPodst.prev.dzialkaSel.Numer, ElementName=InfoDanePodstawowe}"/>

                <view:UserControl_ElementInfo
                        Grid.Row="2"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="Obreb"
                        tekstRaf="{Binding Path=DataContext.infoMain.infoPodst.prev.dzialkaSel.Obreb.Nazwa, ElementName=InfoDanePodstawowe}"/>

                <view:UserControl_ElementInfo
                        Grid.Row="3"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="Gmina"
                        tekstRaf="{Binding Path=DataContext.infoMain.infoPodst.prev.dzialkaSel.Obreb.GminaSlo.Nazwa, ElementName=InfoDanePodstawowe}"/>

                <view:UserControl_ElementInfo
                        Grid.Row="4"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="KW aktualne"
                        tekstRaf="{Binding Path=DataContext.infoMain.infoPodst.prev.dzialkaSel.Kwakt, ElementName=InfoDanePodstawowe}"/>

                <view:UserControl_ElementInfo
                        Grid.Row="5"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="KW zrob."
                        tekstRaf="{Binding Path=DataContext.infoMain.infoPodst.prev.dzialkaSel.Kwzrob, ElementName=InfoDanePodstawowe}"/>

                <view:UserControl_ElementInfo
                        Grid.Row="6"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="Powierzchnia"
                        tekstRaf="{Binding Path=DataContext.infoMain.infoPodst.prev.dzialkaSel.Pow, ElementName=InfoDanePodstawowe, StringFormat='{}{0:#,0.00}'}"/>

                <view:UserControl_ElementInfo
                        Grid.Row="7"
                        Style="{StaticResource userInfo}"
                        Margin="0,1,0,1"
                        labelRaf="Ulica">

                    <view:UserControl_ElementInfo.tekstRaf>
                        <MultiBinding Converter="{StaticResource uliceCon}" >
                            <Binding  Path="DataContext.infoMain.infoPodst.prev.dzialkaSel.UliceSloId" ElementName="InfoDanePodstawowe"/>
                            <Binding  Path="DataContext.infoMain.infoPodst.uliceSloList" ElementName="InfoDanePodstawowe"/>
                        </MultiBinding>
                    </view:UserControl_ElementInfo.tekstRaf>
                </view:UserControl_ElementInfo>



























